#!/bin/bash

# conda <user> <op> -n <proj> [-c <channel> --override-channels] lib[=version]
# conda $1 -n $2 -c [$3] $4 [$5]

if [[ $# -lt 5 || $# -gt 6 ]]; then
  echo "incorrect usage"
  echo "user op proj conda_channel libname [version]"
  exit 1
fi

VERSION=""
if [ $# -eq 6  ]; then
  VERSION="=${6}"
fi

EXEC_AS_USER=$1
shift
OP="$1"
shift
PROJECT="$1"
shift
CHANNEL=
# default channel_alias  is http://conda.anaconda.org/.
if [ "$1" != "default" ] ; then
  CHANNEL="-c $1 --override-channels"
fi
shift
# Name of virtualenv python dependency
LIB_NAME=$1

#No versions allowed with upgrade
if [ "$OP" == "UPGRADE" ] ; then
  VERSION=""
fi    
LIB="${LIB_NAME}${VERSION}"


function exists() {
    su $EXEC_AS_USER -c "<%= node["conda"]["base_dir"] %>/bin/conda list -n $PROJECT | grep '^${LIB_NAME} '"
    return $?
}

if [ $? -ne 0 ] ; then
 exit 2
fi

res=0
if [ "$OP" == "INSTALL" ] ; then
  exists
  if [ $? -ne 0 ] ; then
      su $EXEC_AS_USER -c "<%= node["conda"]["base_dir"] %>/bin/conda install -n $PROJECT --use-index-cache -q -y $CHANNEL $LIB"
  fi
elif [ "$OP" == "UPGRADE" ] ; then
  exists
  if [ $? -eq 0 ] ; then
      su $EXEC_AS_USER -c "<%= node["conda"]["base_dir"] %>/bin/conda upgrade -n $PROJECT -q -y $CHANNEL $LIB"
  fi
elif [ "$OP" == "UNINSTALL" ] ; then
  exists
  if [ $? -eq 0 ] ; then
      su $EXEC_AS_USER -c "<%= node["conda"]["base_dir"] %>/bin/conda remove -n $PROJECT -q -y $CHANNEL $LIB_NAME"
  fi
else
  res=-5
fi
if [ $? -ne 0 ] ; then
  res=1
fi


exit $res
